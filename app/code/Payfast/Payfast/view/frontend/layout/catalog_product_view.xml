<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="product.info.options.wrapper">
        <block class="Payfast\Payfast\Block\Catalog\Product\View\PayfastRecurringPayment" name="product.info.recurring.options" as="recurring_options" template="Payfast_Payfast::catalog/product/view/payment/options.phtml"/>
        <block class="Payfast\Payfast\Block\Catalog\Product\View\PayfastRecurringPayment" name="product.info.additional.schedule" as="recurring_info" template="Payfast_Payfast::catalog/product/view/payment/schedule.phtml" group="detailed_info">
            <action method="setTitle">
                <argument translate="true" name="value" xsi:type="string">PayFast Recurring Payment</argument>
            </action>
        </block>
    </referenceBlock>
</page>
